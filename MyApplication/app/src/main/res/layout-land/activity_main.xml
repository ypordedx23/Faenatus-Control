<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yurydaniel.myapplication.MainActivity"
    android:background="@drawable/logol">

    <RelativeLayout
        android:id="@+id/bInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/restr"
            android:layout_marginRight="400dp"
            />

        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emp"
            android:layout_toRightOf="@+id/imagen1"
            android:layout_marginRight="400dp"
            />

        <ImageView
            android:id="@+id/imagen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ver"
            android:layout_toRightOf="@+id/imagen2"
            />

    </RelativeLayout>

    <TextView
        android:text="Aeropuerto internacional Mariscal Sucre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:editable="false"
        android:enabled="false"
        android:layout_marginRight="145dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:fontFamily="serif"
        android:layout_above="@+id/bInferior"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

